{
	"name": "kipri",
	"version": "0.0.0",
	"license": "MIT",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"db:connect": "turbo db:connect",
		"db:generate": "turbo db:generate",
		"db:push": "turbo db:push",
		"db:studio": "npm run dev --workspace @clfxc/db",
		"build": "turbo build",
		"dev": "turbo dev --parallel",
		"clean:workspaces": "turbo clean",
		"clean": "rm -rf node_modules .turbo .vercel",
		"lint": "turbo lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"foley:dev": "turbo dev --filter=foley",
		"foley:build": "turbo build --filter=foley",
		"api:dev": "concurrently \"npm run build:watch --workspace=api\" \"npm run serve-funcs --workspace=api\""
	},
	"devDependencies": {
		"concurrently": "^7.4.0",
		"eslint-config-custom": "*",
		"firebase-tools": "^11.14.4",
		"prettier": "latest",
		"turbo": "latest"
	},
	"engines": {
		"node": "^16.0.0"
	},
	"packageManager": "npm@8.19.2"
}
