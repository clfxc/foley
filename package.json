{
    "name": "kipri",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "db:connect": "turbo db:connect",
        "db:studio": "npm run dev --workspace @clfxc/db",
        "db:generate": "turbo db:generate --filter=@clfxc/db",
        "db:push": "turbo db:push --filter=@clfxc/db",
        "db-nika:generate": "turbo db:generate --filter=nika",
        "db-nika:push": "turbo db:push --filter=nika",
        "build": "turbo build",
        "dev": "turbo dev --parallel",
        "clean": "turbo clean && rm -rf node_modules .turbo package-lock.json",
        "lint": "turbo lint",
        "format": "prettier --write \"**/*.{ts,tsx,js,mjs,cjs,md}\"",
        "foley:dev": "turbo dev --filter=foley",
        "foley:build": "turbo build --filter=foley",
        "nika:dev": "turbo dev --filter=nika",
        "nika:build": "turbo build --filter=nika"
    },
    "devDependencies": {
        "concurrently": "^7.4.0",
        "eslint-config-custom": "*",
        "prettier": "latest",
        "prisma": "^4.13.0",
        "turbo": "^1.9.3"
    },
    "engines": {
        "node": "^16.0.0"
    },
    "packageManager": "npm@8.19.2",
    "dependencies": {
        "@prisma/client": "^4.13.0"
    }
}
