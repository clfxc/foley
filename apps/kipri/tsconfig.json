{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "tsconfig/nextjs.json",
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@styles/*": ["styles/*"],
			"@components/*": ["components/*"],
			"@declarations/*": ["utils/declarations/*"],
			"@utils/*": ["utils/*"],
			"@images/*": ["./public/images/*"]
		}
	},
	"include": ["src", "next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", ".next"]
}
