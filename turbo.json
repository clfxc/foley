{
	"$schema": "https://turborepo.org/schema.json",
	"globalEnv": ["NODE_ENV", "TZ"],
	"pipeline": {
		"db:generate": {
			"outputs": []
		},
		"db:push": {
			"cache": false
		},
		"db:dev": {
			"cache": false
		},
		"db:connect": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^db:generate", "^lint", "^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"foley:dev": {
			"cache": false
		},
		"foley:build": {
			"dependsOn": ["^lint", "^db:generate", "^build"],
			"outputs": [".next/**"],
			"env": ["DATABASE_URL", "SHADOW_DATABASE_URL", "UPSTASH_REDIS_REST_TOKEN", "UPSTASH_REDIS_REST_URL"]
		},
		"lint": {
			"outputs": []
		},
		"dev": {
			"dependsOn": ["^db:generate"],
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
