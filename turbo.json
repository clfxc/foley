{
	"$schema": "https://turborepo.org/schema.json",
	"globalEnv": ["NODE_ENV", "TZ"],
	"pipeline": {
		"db:generate": {
			"outputs": [".generated/**"]
		},
		"db:push": {
			"cache": false
		},
		"db:dev": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^db:generate", "^lint", "^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"foley:build": {
			"dependsOn": ["^lint", "^db:generate", "^build"],
			"outputs": [".next/**"],
			"env": ["FIREBASE_PROJECT_ID", "FIREBASE_PRIVATE_KEY", "FIREBASE_CLIENT_EMAIL"]
		},
		"lint": {
			"outputs": []
		},
		"dev": {
			"dependsOn": ["^db:generate"],
			"cache": false
		},
		"clean": {
			"cache": false
		}
	}
}
